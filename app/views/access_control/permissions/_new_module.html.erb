<%= form_tag modules_path, :method => :post do %>
<div class="modal-header bg-primary lter" style="border-radius: 3px 3px 0 0">
  <h4 class="modal-title"><strong>Create Module</strong></h4>
</div>
<div class="modal-body">
  <div class="row">
    <div class="form-group">
      <label class="col-xs-4">Module Name</label>
      <div class="col-xs-8">
        <input name="module_name" type="text" class="form-control" />
      </div>
    </div>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
  <%= submit_tag 'Submit', :class => "btn btn-primary", :data => { :confirm => "Are you sure?" } %>
</div>
<% end %>